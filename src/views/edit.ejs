<html>
  <head>
      <meta charset="utf-8">
      <title>CRUD NODE.JS</title>
      <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
  </head>
  <body>
      <nav class="navbar navbar-dark bg-dark">
          <a href="/" class="navbar-brand">CRUD nodejs</a>
      </nav>

      <div class="container mt-5">
        <div class="row">
          <div class="col-md-5">
              <div class="card">
                  <div class="card-body">
                    <% if (data) { %>                          
                         <form action="/update/<%= data.id %>" method="post"> 
                             <div class="form-group">
                               <input type="text" name="nombre" value="<%= data.nombre %>" class="form-control"> 
                              </div>  
                             <div class="form-group"> 
                                 <input type="text" name="cedula" value="<%= data.cedula %>" class="form-control"> 
                             </div>
                             <div class="form-group"> 
                                  <input type="text" name="email" value="<%= data.email %>" class="form-control"> 
                                </div>
                             <div class="form-group"> 
                                  <input type="text" name="telefono" value="<%= data.telefono %>" class="form-control"> 
                             </div> 
                              <button type="submit" class="btn btn-primary">Actualizar</button> 
                        </form> 
                   <% }; %>
                  </div>
              </div>
          </div>
        </div>
     </div>


  </body>

  </html>